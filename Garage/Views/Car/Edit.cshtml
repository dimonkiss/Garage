@using DataAccess.Models
@model Car

<div class="container">
    <div class="row">
        <h2>Edit Car</h2>
    </div>
    <form asp-controller="Car" asp-action="Edit" method="post" class="row g-3">
        <div class="col-12">
            <label asp-for="Name" for="Name" class="form-label">Name</label>
            <input asp-for="Name" type="text" class="form-control" value="@Model.Name">
        </div>
        <div class="col-12">
            <label asp-for="Color" class="form-label">Color</label>
            <input type="text" class="form-control" asp-for="Color" value="@Model.Color">
        </div>
        <div class="col-12">
            <label asp-for="Price" class="form-label">Price</label>
            <input type="number" class="form-control" asp-for="Price" value="@Model.Price">
        </div>
        <div class="col-12">
            <label asp-for="ImagePath" class="form-label">ImagePath</label>
            <input type="text" class="form-control" asp-for="ImagePath" value="@Model.ImagePath">
        </div>
        <div class="col-12">
            <label asp-for="CategoryId" class="form-label">Category</label>
            <select asp-for="CategoryId" asp-items="@ViewBag.ListCategory" class="form-select">
            </select>
        </div>

        <div class="col-12">
            <button type="submit" class="btn btn-primary">Update</button>
        </div>
    </form>
</div>
