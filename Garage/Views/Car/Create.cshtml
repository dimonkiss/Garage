@{
    
}
<div class="container">
    <div class="row">
        <h2>Create New Car</h2>
    </div>
    <form asp-controller="Car" asp-action="Create" method="post" class="row g-3">
        <div asp-validation-summary="All"></div>
        <div class="col-12">
            <label asp-for="Name" for="Name" class="form-label">Name</label>
            <input asp-for="Name"  type="text" class="form-control" >
            <span asp-validation-for="Name" class="form-text text-danger"></span>
        </div>
        <div class="col-12">
            <label asp-for="Color" class="form-label">Color</label>
            <input type="text" class="form-control" asp-for="Color">
        </div>
        <div class="col-12">
            <label asp-for="Price" class="form-label">Price</label>
            <input type="number" class="form-control" min="0" asp-for="Price">
            <span asp-validation-for="Price" class="form-text text-danger"></span>
        </div>
        <div class="col-12">
            <label asp-for="ImagePath" class="form-label">ImagePath</label>
            <input type="url" class="form-control" asp-for="ImagePath">
            <span asp-validation-for="ImagePath" class="form-text text-danger"></span>
        </div>
        <div class="col-md-4">
            <label asp-for="CategoryId" class="form-label">Category</label>
            <select class="form-select" asp-items="@ViewBag.CategoryList" asp-for="CategoryId">
                
            </select>
        </div>
       
        <div class="col-12">
            <button type="submit" class="btn btn-primary">Create</button>
        </div>
    </form>
</div>